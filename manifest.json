{
	"manifest_version": 3,
	"name": "Meazure Web",
	"description": "Messe Pixel, Koordinaten und mehr direkt im Browser",
	"version": "0.1",
	"permissions": [
		"scripting",
		"activeTab"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	]
}